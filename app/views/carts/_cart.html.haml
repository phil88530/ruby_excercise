.cart_title Your Cart

%table
  =render @cart.line_items

  %tr.total_line
    %td{:colspan => 2}Total
    %td.total_cell=number_to_currency(@cart.total_price)
=button_to 'Check Out', new_order_path, :method => :get
=button_to 'Empty Cart', @cart, :method => :delete, :confirm => 'Are you sure you want to empty your shopping cart?', :remote => true

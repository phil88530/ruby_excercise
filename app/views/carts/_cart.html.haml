- content_for :head do
  = stylesheet_link_tag :carts

.cart_title Your Cart

%table
  =render @cart.line_items

  %tr.total_line
    %td{:colspan => 2}Total
    %td.total_cell=number_to_currency(@cart.total_price)

=button_to 'Empty Cart', @cart, :method => :delete, :confirm => 'Are you sure you want to empty your shopping cart?'

= form_for @order do |f|
  -if @order.errors.any?
    #error_explanation
      %h2= t('errors.template.header', :count => @order.errors.size, :model => t('activerecord.models.order'))
      %p= t('errors.template.body')
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= raw msg

  .field
    = f.label :name, t('.name_html')
    = f.text_field :name, :size => 40
  .field
    = f.label :address, t('.address_html')
    = f.text_area :address, :rows => 3, :cols => 40
  .field
    = f.label :email
    = f.text_field :email, :size => 40
  .field
    = f.label :pay_type, t('.pay_type_html')
    = f.select :pay_type, payment_types_option, 
                          :prompt => t('.pay_prompt_html')
  .actions
    = f.submit t('.submit')
